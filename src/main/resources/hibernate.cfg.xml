<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
	<property name="hibernate.dialect">
		org.hibernate.dialect.MySQL5InnoDBDialect
	</property>

	<property name="show_sql">true</property>
	<property name="hibernate.hbm2ddl.auto">update</property>
	<property name="hibernate.format_sql">true</property>

	<!-- 导入映射文件 -->
	
	<mapping class="cn.edu.zju.cst.ideas.domain.Brands" />
	<mapping class="cn.edu.zju.cst.ideas.domain.Comment" />
	<mapping class="cn.edu.zju.cst.ideas.domain.Goods" />
	<mapping class="cn.edu.zju.cst.ideas.domain.Site" />
	<mapping class="cn.edu.zju.cst.ideas.domain.Type" />
	

</session-factory>
</hibernate-configuration>